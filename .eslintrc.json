{
  "env": { "commonjs": true, "node": true, "jest/globals": true },
  "extends": ["plugin:jest/recommended"],
  "globals": { "Atomics": "readonly", "SharedArrayBuffer": "readonly", "BalanceListPO": true, "DashboardPO": true, "NewOperationPO": true, "RightMenuPO": true },
  "parser": "@typescript-eslint/parser",
  "parserOptions": { "ecmaVersion": 2019 },
  "plugins": ["@typescript-eslint", "jest"],
  "rules": {
    "no-param-reassign": "warn",
    "import/extensions": "off",
    "import/no-unresolved": "off",
    "import/prefer-default-export": "off",
    "no-unused-vars": "off",
    "@typescript-eslint/no-unused-vars": ["error"],
    "no-underscore-dangle": ["error", { "allow": ["_id", "_driver"] }],
    "class-methods-use-this": "off",
    "lines-between-class-members": "off",
    "jest/no-disabled-tests": "warn",
    "jest/no-focused-tests": "error",
    "jest/no-identical-title": "off",
    "jest/prefer-to-have-length": "warn",
    "jest/valid-expect": "error",
    "jest/valid-title": "off",
    "no-restricted-syntax": "warn",
    "camelcase": "off",
    "no-empty-function": "warn",
    "no-useless-constructor": "off",
    "indent": ["error", 2],
    "linebreak-style": ["error", "unix"],
    "quotes": ["error", "single", { "avoidEscape": true }],
    "semi": ["error", "always"],
    "no-var": "error",
    "no-prototype-builtins": "off",
    "require-await": "error",
    "eslint no-octal": "off",
    "no-octal-escape": "off",
    "init-declarations": ["error", "always"],
    "no-return-await": "error",
    "no-return-assign": "error",
    "no-useless-call": "error",
    "prefer-const": "error"
  }
}
